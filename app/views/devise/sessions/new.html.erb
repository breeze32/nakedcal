 
 
<body class="w3-theme-l5">
 
<div class="w3-top">
 <div class="w3-bar w3-theme-d2 w3-left-align w3-large"> 
    <div  class="w3-bar-item w3-button w3-padding-large w3-theme-d4" title="Notifications"><i class="fa fa-calendar-plus-o w3-margin-right"> </i>로그인</div>         
 </div> 
</div> 
 
<div class="w3-container w3-content" style="max-width:1400px;margin-top:200px">  
	<div style="max-width:500px;margin:auto">
	<%=form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 
		  <div class="input-container">
		    <i class="fa fa-envelope icon"></i>
		    <%=f.email_field :email, autofocus: true, autocomplete: "email", class:"input-field", placeholder:"email" %> 
		  </div>
		  
		  <div class="input-container">
		    <i class="fa fa-key icon"></i>
		    <%=f.password_field :password, autocomplete: "off", class:"input-field", placeholder:"password" %> 
		  </div>  
		   <br><br>
		  <button  type="submit" class="w3-button w3-white w3-border">로그인</button> 
	  <% end %>
	  <br> 
	   <a href="/users/sign_up"class="w3-text-blue" style="  font-color:blue" ><strong>회원가입</strong></a> 
	</div> 
</div>

 
 

